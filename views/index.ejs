  <form class="" action="/detail" method="post">
    <fieldset class="bread">
      <legend>What kind of bread would you like?</legend>
      <div class="container">
        <% if (breads) { breads.forEach(function(loaf) { %>
        <div class="item">
          <input id="<%= loaf.name %>" type="checkbox" name="<%=loaf.name%>" value="<%= loaf.name%>">
          <label for="<%= loaf.name %>"><img src="<%=loaf.cover_image%>" alt="<%= loaf.name%>"></label>
          <p>
            <%=loaf.name%>
          </p>
        </div>
        <% })} %>
      </div>
    </fieldset>

    <fieldset class="cheese">
      <legend>What kind of cheese?</legend>
<div class="container">
